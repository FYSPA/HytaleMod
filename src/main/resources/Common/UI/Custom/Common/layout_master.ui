$C = "../Common.ui";

$C.@PageOverlay {
  Group {
    // CORRECCIÓN 1: Ajustamos la altura a la real (450) para evitar bugs visuales
    Anchor: (Width: 800, Height: 450);
    LayoutMode: Left;
    Padding: (Full: 0);

    // --- SIDEBAR ---
    Group {
      LayoutMode: Top;
      Anchor: (Width: 200, Height: 450);
      Padding: (Top: 20, Left: 10, Right: 10);
      Background: PatchStyle( TexturePath: "MyBackground.png", Border: 15 );

      Label {
        Text: "WAYHOME";
        Style: (FontSize: 18, TextColor: #eec11a, RenderBold: true, Alignment: Center);
      }

      Group { Anchor: (Height: 30); }

      // Botón Mis Casas
      TextButton #NavList {
          Text: "Mis Casas";
          Anchor: (Height: 40);
          Style: $C.@DefaultTextButtonStyle;
      }

      Group { Anchor: (Height: 10); }

      // Botón Configuración
      TextButton #NavConfig {
          Text: "Configuración";
          Anchor: (Height: 40);
          Style: $C.@DefaultTextButtonStyle;
      }

      Group { Anchor: (Height: 10); }

      // CORRECCIÓN 3: ID Único para el botón Create
      TextButton #NavCreate {
           Text: "Crear Casa";
           Anchor: (Height: 40);
           Style: $C.@DefaultTextButtonStyle;
      }

      Group { FlexWeight: 1; } // Espaciador

      // Botón Salir
      TextButton #BtnClose {
        Text: "Salir";
        Anchor: (Height: 40);
        Style: (Default: (Background: #882222, LabelStyle: (TextColor: #ffffff, Alignment: Center)));
      }
      Group { Anchor: (Height: 20); }
    }

    // Espacio entre Sidebar y Contenido (Opcional, si quieres separarlos visualmente)
    // Group { Anchor: (Width: 10); }

    // --- CONTENEDOR DE PÁGINAS (DERECHA) ---
    Group #PageContainer {
        LayoutMode: Top;
        FlexWeight: 1;
        Anchor: (Height: 450);
        Padding: (Full: 0);

        // Fondo también con PatchStyle para consistencia
        Background: PatchStyle( TexturePath: "MyBackground.png", Border: 15 );
    }
  }
}