@LabelStyle = LabelStyle(FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
@ValueStyle = LabelStyle(FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
@TitleStyle = LabelStyle(FontSize: 22, TextColor: #eec11a, RenderBold: true, HorizontalAlignment: Center);
@ButtonStyle = TextButtonStyle(
  Default: (Background: #333333(0.8), LabelStyle: @LabelStyle),
  Hovered: (Background: #555555(0.9), LabelStyle: @LabelStyle)
);

Group #MyPanel {
    Background: #000000(0.9);
    Anchor: (Width: 500, Height: 450);
    LayoutMode: Top;
    Padding: (Top: 30, Bottom: 30, Left: 20, Right: 20);

    // TÍTULO
    Label {
        Text: "ADMINISTRACIÓN WAYHOME";
        Style: @TitleStyle;
        Anchor: (Width: 460, Height: 40);
    }

    Group { Anchor: (Height: 40); } // Espacio

    // FILA 1: LÍMITE
    Group {
        LayoutMode: Center;
        Anchor: (Width: 460, Height: 50);
        Label { Text: "Límite de casas:  "; Style: @LabelStyle; }
        TextButton #BtnSubMax { Text: "-"; Anchor: (Width: 40, Height: 35); Style: @ButtonStyle; }
        Label #MaxHomesLabel { Text: "0"; Style: @LabelStyle; Anchor: (Width: 60); }
        TextButton #BtnAddMax { Text: "+"; Anchor: (Width: 40, Height: 35); Style: @ButtonStyle; }
    }

    // FILA 2: DELAY
    Group {
        LayoutMode: Center;
        Anchor: (Width: 460, Height: 50);
        Label { Text: "Segundos Delay:  "; Style: @LabelStyle; }
        TextButton #BtnSubDelay { Text: "-"; Anchor: (Width: 40, Height: 35); Style: @ButtonStyle; }
        Label #DelayValueLabel { Text: "0s"; Style: @LabelStyle; Anchor: (Width: 60); }
        TextButton #BtnAddDelay { Text: "+"; Anchor: (Width: 40, Height: 35); Style: @ButtonStyle; }
    }

    // FILA 3: ESTADO (Aquí corregimos el color)
    Group {
        LayoutMode: Center;
        Anchor: (Width: 460, Height: 50);
        Label { Text: "Estado Delay:  "; Style: @LabelStyle; }
        // Esta etiqueta recibirá el color desde Java
        Label #DelayStatusLabel {
            Text: "OFF";
            Style: @ValueStyle;
            Anchor: (Width: 60);
        }
        TextButton #BtnToggleDelay { Text: "CAMBIAR"; Anchor: (Width: 100, Height: 35); Style: @ButtonStyle; }
    }

    Group { FlexWeight: 1; } // Espaciador elástico

    // BOTÓN CERRAR
    Group {
        LayoutMode: Center;
        Anchor: (Width: 460, Height: 60);
        TextButton #BtnClose {
            Text: "GUARDAR Y CERRAR";
            Anchor: (Width: 280, Height: 45);
            Style: (Default: (Background: #882222(0.8), LabelStyle: @LabelStyle));
        }
    }
}